<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.SelectionScene">
    <top>
        <HBox spacing="30" alignment="CENTER">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>
            <ImageView fx:id="logoImage1" fitWidth="100.0" cache="true" preserveRatio="true"/>
            <Text styleClass="titleText" text="Practise Program" />
            <ImageView fx:id="logoImage2" fitWidth="100.0" cache="true" preserveRatio="true"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets bottom="25" left="25" right="25" />
            </padding>

            <Text styleClass="large-text" text="Please chooses a difficulty level using the arrow buttons:"/>

            <HBox spacing="20" alignment="CENTER">
                <Button styleClass="light, small" text="&lt;" onAction="#selectPrev"/>
                <Text fx:id="diffText" wrappingWidth="100" textAlignment="CENTER"/>
                <Button styleClass="light, small" text="&gt;" onAction="#selectNext"/>
            </HBox>

            <Button text="Start" styleClass="green" onAction="#handleStart"/>
        </VBox>
    </center>
    <bottom>
        <BorderPane>
            <padding>
                <Insets bottom="25" left="25" right="25" top="25" />
            </padding>
            <left>
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <padding>
                        <Insets right="25" />
                    </padding>
                    <Button text="Go back" styleClass="red" onAction="#handleBack"/>
                </HBox>
            </left>
        </BorderPane>
    </bottom>
</BorderPane>
